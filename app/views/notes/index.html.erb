<h1 class="text-4xl font-bold text-[var(--text-color)] mb-8">Your Notes</h1>

<div class="mb-8">
  <%= link_to 'Add New Note', new_note_path, class: "inline-block px-5 py-3 rounded-lg bg-[var(--primary-color)] text-[var(--text-color)] font-medium hover:bg-[var(--accent-color)] transition duration-300" %>
</div>

<% if @notes.any? %>
  <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
    <% @notes.each do |note| %>
      <div class="rounded-2xl shadow-lg bg-white p-6 border border-[var(--accent-color)] hover:shadow-xl transition duration-300">
        <h2 class="text-2xl font-semibold text-[var(--text-color)] mb-3 leading-tight">
          <%= link_to note.title, note_path(note), class: "hover:underline" %>
        </h2>

        <% if note.tags.any? %>
          <div class="flex flex-wrap gap-2 mb-4">
            <% note.tags.each do |tag| %>
              <span class="inline-block px-3 py-1 text-xs font-medium rounded-full bg-[var(--accent-color)] text-[var(--text-color)]">
                <%= tag.name %>
              </span>
            <% end %>
          </div>
        <% end %>

        <p class="text-sm text-gray-600 mb-2"><strong>Status:</strong> <%= note.status %></p>

        <% if note.due_date.present? %>
          <p class="text-sm text-gray-600 mb-4">ðŸ“… Due: 
            <%= note.due_date.strftime("%B %d, %Y at %I:%M %p") %>
          </p>
        <% end %>

        <div class="flex flex-wrap gap-3 mt-4">
          <%= link_to 'Edit', edit_note_path(note), class: "px-4 py-2 rounded bg-[var(--secondary-color)] text-[var(--text-color)] text-sm font-medium hover:bg-[var(--primary-color)] transition" %>

          <%= button_to 'Delete', note_path(note), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "px-4 py-2 rounded bg-red-100 text-red-700 text-sm font-medium hover:bg-red-200 transition" %>
        </div>
      </div>
    <% end %>
  </div>

<% else %>
  <p class="text-gray-500 text-lg">You don't have any notes yet.</p>
<% end %>
