<div class="min-h-screen flex items-center justify-center bg-[var(--primary-color)]">
  <div class="flex flex-col md:flex-row w-full max-w-5xl shadow-lg bg-white rounded-lg overflow-hidden">

    <!-- Left Side (Visual) -->
    <div class="hidden md:flex w-1/2 bg-[var(--accent-color)] items-center justify-center p-8">
      <h2 class="text-4xl font-bold text-[var(--text-color)]">Welcome to Notenest âœ¨</h2>
    </div>

<div class="w-full md:w-1/2 flex items-center justify-center px-8 py-12 md:px-6 md:py-8">

    <div class="w-full max-w-md ">
      <h2 class="text-3xl font-bold text-[var(--text-color)] mb-6 ">Log In</h2>

      <% if notice %>
      <p class="notice"><%= notice %></p>
      <% end %>
      <% if alert%>
      <p class="alert"><%= alert %></p>
      <% end %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-4">
          <%= f.label :email, class: "block mb-1 text-[var(--text-color)]"  %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-1 border rounded"  %>
        </div>

        <div class="field">
          <%= f.label :password, class: "block mb-1 text-[var(--text-color)]" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-1 border rounded"  %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div  class="flex items-center mt-4 mb-4">
            <%= f.check_box :remember_me, class: "mr-2 h-4 w-4 text-[var(--dark-color)] border-gray-300 rounded focus:ring-[var(--dark-color)]"%>
            <%= f.label :remember_me, class: "text-[var(--text-color)]" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "w-full bg-[var(--dark-color)] text-white py-2 rounded hover:bg-color-700 transition" %>
        </div>
      <% end %>
    
      
      <%= render "devise/shared/links" %>

    </div>
  </div>
  </div>
</div>