<div class="min-h-screen flex items-center justify-center bg-[var(--primary-color)]">
  <div class="flex flex-col md:flex-row w-full max-w-5xl shadow-lg bg-white rounded-lg overflow-hidden">

<!-- Left Side (Visual) -->
    <div class="hidden md:flex w-1/2 bg-[var(--accent-color)] items-center justify-center p-8">
      <h2 class="text-4xl font-bold text-[var(--text-color)]">Welcome to Notenest âœ¨ </h2>
    </div>

    <div class="w-full md:w-1/2 p-10">
      <h2 class="text-3xl font-bold text-[var(--text-color)] mb-6">Sign Up</h2>

      
      <% if notice %>
      <p class="notice"><%= notice %></p>
      <% end %>
      <% if alert%>
      <p class="alert"><%= alert %></p>
      <% end %>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-4">
          <%= f.label :first_name , class: "block mb-1 text-[var(--text-color)]"%>
          <%= f.text_field :first_name, required: true, autocomplete: "first_name", class: "w-full px-4 py-1 border rounded"  %>
        </div>
        
        <div class="mb-4">
          <%= f.label :last_name, class: "block mb-1 text-[var(--text-color)]" %>
          <%= f.text_field :last_name, required: true, autocomplete: "last_name", class: "w-full px-4 py-1 border rounded"  %>
        </div>

        <div class="mb-4">
          <%= f.label :email, class: "block mb-1 text-[var(--text-color)]" %>
          <%= f.email_field :email, reqired: true, autocomplete: "email", class: "w-full px-4 py-1 border rounded"  %>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: "mb-1 text-[var(--text-color)]" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, required: true, autocomplete: "new-password", class: "w-full px-4 py-1 border rounded"  %>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, class: "block mb-1 text-[var(--text-color)]" %>
          <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "w-full px-4 py-1 border rounded"  %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up",  class: "w-full bg-[var(--dark-color)] text-white py-2 rounded hover:bg-color-700 transition" %>
        </div>

      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>