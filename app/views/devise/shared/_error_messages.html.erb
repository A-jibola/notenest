<% if resource.errors.any? %>
  <div id="error_explanation" data-turbo-cache="false"  style="
      background-color: #FFE5E5;
      color: #7A1F1F;
      border: 1px solid #FFB3B3;
      padding: 20px;
      margin-bottom: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.03);
    ">
    <h2 style="margin-top: 0; font-size: 18px; font-weight: 600;">
      <%= I18n.t("errors.messages.not_saved",
                 count: resource.errors.count,
                 resource: resource.class.model_name.human.downcase)
       %>
    </h2>
    <ul style="list-style-type: disc; padding-left: 20px; margin: 12px 0 0 0;">
      <% resource.errors.full_messages.each do |message| %>
        <li style="margin-bottom: 6px; font-size: 14px;"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
